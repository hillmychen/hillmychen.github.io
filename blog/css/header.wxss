.bl_header {
  width: 100%;
  height: 334px;
}
.bl_header #header-container {
  position: relative;
  top: 50%;
  margin-top: -4.3rem;
}
.bl_header #header-container .bl-logo {
  height: 2.6rem;
  line-height: 2.6rem;
  font-size: 2.3rem;
  font-weight: bold;
  color: #555555;
  text-align: center;
  white-space: nowrap;
}
.bl_header #header-container .bl-logo:hover {
  color: #7a6b53;
}
.bl_header #header-container .bl-logo::before {
  content: "";
  display: block;
}
.bl_header #header-container #nav-collapse {
  height: 3.8rem;
  margin-top: 2rem;
}
.bl_header #header-container #nav-collapse #mynav ul {
  height: 100%;
  margin-left: 20% ;
  width: 60%;
}
.bl_header #header-container #nav-collapse #mynav ul li {
  display: block;
  height: 100%;
  text-align: center;
}
.bl_header #header-container #nav-collapse #mynav ul li .nav-link {
  display: block;
  padding: 0 !important;
  line-height: 2;
  background: none!important;
  color: #6f6f6f;
}
.bl_header #header-container #nav-collapse #mynav ul li .nav-link:hover {
  color: #3b3b3b;
  border-bottom: 1px solid #3b3b3b;
  background: none!important;
}
